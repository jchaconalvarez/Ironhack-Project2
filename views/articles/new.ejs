<div class="profile-wrapper">
  <h1>Subm<span>i</span>t article</h1>

  <form class="form" id="newArticle" action="/articles/new" method="POST">
    <label for="url">URL:</label>
    <input placeholder="URL to article"  type="url" id="url" name="url" required>
    <label for="title">Headline:</label>
    <input placeholder="Article headline"  type="text" id="title" name="title" required>
    <label for="description">Description:</label>
    <textarea name="description" rows="2" cols="20" maxlenght="500" wrap="soft"></textarea>
