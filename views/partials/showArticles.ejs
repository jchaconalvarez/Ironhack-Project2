<% articles.forEach((article) => { %>

  <div class="article-card">
    <p class="article-source"></p>
    <h5 class="article-headline">
      <a href="/articles/<%= article._id %>"><%= article.title %></a>
    </h5>

    <div class="article-img">
      <a target="_blank" href=<%=article.url %> >
        <img class='article-image' src=<%= article.urlToImage %> >
      </a>
    </div>

    <p class="article-description"><%= article.description %></p>

    <div class="article-social">
      <ul>
        <li class="favorite" value=<%= article._id %>>
          <% if(currentUser.articles.find(result => result._id.equals(article._id))) { %>
            <i class="fas fa-star fa-sm"></i>
          <% }else{ %>
            <i class="far fa-star fa-sm"></i>
          <% } %>
        </li>

        <li class="like" value=<%= article._id %> >
          <% if( currentUser.favorites.find(result => result._id.equals(article._id))) {%>
            <i class="fas fa-thumbs-up fa-sm"></i>
          <% }else{ %>
            <i class="far fa-thumbs-up fa-sm"></i>
          <% } %>
          <span id="likes"> <%= article.favorites %> </span>
        </li>

        <li class="dislike" value=<%= article._id %>>
          <% if( currentUser.dislikes.find(result => result._id.equals(article._id))) {%>
            <i class="fas fa-thumbs-down fa-sm"></i>
          <% }else{ %>
            <i class="far fa-thumbs-down fa-sm"></i>
          <% } %>
          <span id="dislikes"><%= article.dislikes %></span>
        </li>

        <li class="share" value=<%= article._id %>>
          <i class="fas fa-share-alt fa-sm"></i>
        </li>

        <% if( article.postedBy._id.toString()===currentUser._id.toString()) {%>
          <li class="trash" value=<%= article._id %>> <i class="fas fa-trash-alt fa-lg"></i>
          </li>
          <% } %>

        </ul>
        <!-- <div class="container-sendmail">
           <li class="sendmail" value=<%= article._id %></li>
           <div id="container-messages">
                <%- include('../partials/notificationsPartial') %>
            </div>
             <div class="container-data">
              <input class="sendmail" placeholder="email"  type="email" id="email" name="email" required>
              <i class="fas fa-envelope-square" id=<%= article._id %></i>
            </div> 
          </li> -->
        </div>
    </div>
  </div>
  <% }); %>
